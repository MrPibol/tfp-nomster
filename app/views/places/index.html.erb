<% @places.each do |place| %>
<div class="booyah-box col-10 offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />

    <% if place.user.present? %>
        <small><%= place.user.email %></small>
    <% end %>

  <div class="col-12 col-sm-6">
    
    <% if place.comments.present? %>
    <blockquote class="blockquote">
      <% if place.comments.last.humanized_rating.present? %>
        <b><%= place.comments.last.humanized_rating %></b>
      <% end %>
      <%= place.comments.last.message %>
      <small class="blockquote-footer"> <%= place.comments.last.user.email %> </small>
    </blockquote>
    <% end %>

    <% if place.photos.present? %>
      <div class="img">
        <%= image_tag place.photos.last.picture %>
      </div>
      <blockquote class="blockquote">
        <% if place.photos.last.present? %>
          <b><%= place.photos.last.caption %></b>
        <% end %>
      <small class="blockquote-footer"> <%= place.photos.last.user.email %> </small>
    <% end %>


  </div>
</div>
<% end %>      
<hr />
<%= paginate @places %>
