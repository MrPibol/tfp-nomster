<div class="booyah-box">
    
    <div class="clear">
        <div class="row">
            <div class="col-4">
                <%= image_tag 'user.png' %>
            </div>
            <div class="col-8">
                <h2><%= @user.email%></h2>
                <h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y")%></h3>
                <h4><%=@user.comments.count%> total comments</h4>
                <h4><%=@user.comments.where(rating: '5_stars').count %> total 5-star reviews</h4>
            </div>
       </div> 
   </div>
   <div class="clear"></div>
   
    <div class="clear">
        <h2 class="text-center">My Comments</h2>
        <div class="row">
            <div class="col-12 col-sm-6">
                <% current_user.comments.each do |comment| %>
                     <blockquote class="blockquote">
                          <% if comment.humanized_rating.present? %>
                            <b><%= comment.humanized_rating %></b>
                          <% end %>
                          <%= comment.message %>
                          <small class="blockquote-footer"> <%= comment.user.email %> </small>
                    </blockquote>
                    <br />
                <% end %>
            </div>
        </div>
    </div>
</div>
